#!/usr/bin/env bash
echo "> update > flake"
exec > >(tee ./logs/update-flake) 2>&1
set -e

source lib/lowercase.bash
source lib/host.bash
source lib/system.bash
source lib/user.bash

bin/update/channels

echo "> cd ./systems/${C9_SYSTEM}"
cd "./systems/${C9_SYSTEM}"

echo "> nix flake update"
nix flake update

echo "> cd ../.."
cd "../.."
