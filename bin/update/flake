#!/usr/bin/env bash
echo "> update > flake"
exec > >(tee ./logs/update-flake) 2>&1
set -e

bin/update/channels

echo "> update > flake > cd hosts/$(hostname)"
cd "hosts/$(hostname)"

echo "> update > flake > nix --experimental-features \"nix-command flakes\" flake update"
nix --experimental-features "nix-command flakes" flake update
