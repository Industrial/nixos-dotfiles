#!/usr/bin/env bash
set -e

source lib/lowercase.bash

HOST=$(lowercase ${1:-"vm"})
echo "bin/vm-update-home-manager > host: ${HOST}"

USER=$(lowercase ${2:-$USER})
echo "bin/vm-update-home-manager > user: ${USER}"

echo "bin/vm-update-home-manager > home-manager build-vm --flake \".#${USER}@${HOST}\" --show-trace"
home-manager build-vm --flake ".#${USER}@${HOST}" --show-trace