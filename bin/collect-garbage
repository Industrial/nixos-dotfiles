#!/usr/bin/env bash
set -e

echo "bin/collect-garbage > nix-env -p /nix/var/nix/profiles/system --delete-generations +2"
nix-env -p /nix/var/nix/profiles/system --delete-generations +2

echo "bin/collect-garbage > sudo nix-collect-garbage --delete-older-than 30d"
sudo nix-collect-garbage --delete-older-than 30d
