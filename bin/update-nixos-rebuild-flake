#!/usr/bin/env bash
set -e

HOST=${1:-"langhus"}
echo "bin/update-nixos-rebuild-flake > host: ${HOST}"

echo "bin/update-nixos-rebuild-flake > sudo nixos-rebuild switch --flake \".#${HOST}\" --show-trace"
sudo nixos-rebuild switch \
  --flake ".#${HOST}" \
  --show-trace \
  --option eval-cache false
